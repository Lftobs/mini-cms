---
import { db, eq, and, Orgs, Projects, ProjectMembers } from "astro:db";
import MDXEditorMilkdown from "@/components/dashboard/MDXEditorToast.tsx";
import ProjectSettingsModal from "@/components/dashboard/ProjectSettingsModal.tsx";
import DashboardLayout from "@/layouts/DashboardNewLayout.astro";

export const prerender = false;

const currentUser = Astro.locals.currentUser;
const userId = currentUser?.id;

if (!userId) {
	Astro.redirect("/login");
}

const { projectId } = Astro.params;

if (!projectId) {
	return Astro.redirect("/dashboard");
}

// TODO: use required repository for this query
const project = await db
	.select({
		id: Projects.id,
		name: Projects.name,
		description: Projects.description,
		linked_repo_name: Projects.linked_repo_name,
		github_repo_link: Projects.github_repo_link,
		orgs_id: Projects.orgs_id,
		orgName: Orgs.name,
		installationId: Orgs.installationId,
		owner: Orgs.owner,
	})
	.from(Projects)
	.innerJoin(Orgs, eq(Projects.orgs_id, Orgs.id))
	.where(eq(Projects.id, projectId))
	.get();

if (!project) {
	return Astro.redirect("/dashboard");
}

let hasAccess = false;

if (project.owner === userId) {
	hasAccess = true;
} else {
	const member = await db
		.select()
		.from(ProjectMembers)
		.where(
			and(
				eq(ProjectMembers.projectId, projectId),
				eq(ProjectMembers.userId, userId),
			),
		)
		.get();

	if (member) {
		hasAccess = true;
	}
}

if (!hasAccess) {
	return Astro.redirect("/dashboard?error=unauthorized");
}

let repoOwner = "";
let repoName = project.linked_repo_name || "";

if (project.github_repo_link) {
	const urlParts = project.github_repo_link.split("/");
	if (urlParts.length >= 4) {
		repoOwner = urlParts[3];
		if (!repoName && urlParts.length >= 5) {
			repoName = urlParts[4];
		}
	}
}

if (!project.installationId) {
	return Astro.redirect(
		`/dashboard?error=github-not-connected&org=${project.orgs_id}`,
	);
}
