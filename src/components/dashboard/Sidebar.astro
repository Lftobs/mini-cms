---
import SheetForm from "../../components/ui/SheetForm.astro";
import { currentOrgIdState } from "../../store/navStore";
import OrgsForm from "../ui/forms/orgsForm.astro";
import ProjectForm from "../ui/forms/projectForm.astro";

const { organizations = [], currentOrg = null } = Astro.props;
---

<div
	x-data={`{
	selectedOrg: ${JSON.stringify(currentOrg)},
    dropdownOpen: window.location.pathname === '/dashboard/orgs/new',
    isMobileMenuOpen: false,
    isCollapsed: false,
    toggleCollapse() {
      this.isCollapsed = !this.isCollapsed;
    },
    handleOrgSwitch(org) {
      this.selectedOrg = org;
      this.dropdownOpen = false;
      // Navigate to current page with org parameter for server-side rendering
      const currentPath = window.location.pathname;
      const searchParams = new URLSearchParams(window.location.search);
      searchParams.set('org', org.id.toString());
      window.location.href = currentPath + '?' + searchParams.toString();
    },
    isActiveOrg(orgId) {
      	return this.selectedOrg.id === orgId;
    },
    toggleMobileMenu() {
      this.isMobileMenuOpen = !this.isMobileMenuOpen;
    },
    init() {
      window.addEventListener('resize', this.handleResize.bind(this));
      this.handleResize();
    },
    handleResize() {
      if (window.innerWidth > 768) {
        this.isMobileMenuOpen = false;
      }
    }
  }`}
	class="relative"
>
	<button
		class="md:hidden fixed top-4 left-4 z-50 p-2 bg-white border border-gray-200 rounded-md shadow-sm hover:bg-gray-50"
		x-on:click="toggleMobileMenu"
		aria-label="Toggle menu"
	>
		<svg
			xmlns="http://www.w3.org/2000/svg"
			fill="none"
			viewBox="0 0 24 24"
			stroke="currentColor"
			width="24"
			height="24"
		>
			<path
				stroke-linecap="round"
				stroke-linejoin="round"
				stroke-width="2"
				d="M4 6h16M4 12h16M4 18h16"
			></path>
		</svg>
	</button>

	<aside
		class="h-full bg-white border-r border-earth-100 flex flex-col transition-all duration-300 md:relative fixed top-0 left-0 bottom-0 z-40 md:z-auto shadow-lg md:shadow-none overflow-hidden"
		:class="{ 'md:w-64': !isCollapsed, 'md:w-16': isCollapsed, 'translate-x-0': isMobileMenuOpen, '-translate-x-full md:translate-x-0': !isMobileMenuOpen }"
	>
		<div class="flex items-center justify-between p-4 border-b border-earth-100 md:justify-start">
		    <h3 class="text-lg font-semibold text-earth-400">Dashboard</h3>
		    <button class="md:hidden p-1 text-earth-200 hover:text-earth-400" x-on:click="toggleMobileMenu" aria-label="Close menu">
		    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="24" height="24">
		        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
		    </svg>
		    </button>
		</div>

		<nav class="flex-1 overflow-y-auto p-4">
		    <div class="mb-6">
				<h4 class="text-xs uppercase tracking-wide text-earth-200 mb-2 px-2">Main</h4>
				<ul class="space-y-1">
					<li>
					<a href="/dashboard" class="flex items-center px-3 py-2 text-earth-300 rounded-md hover:bg-earth-50 hover:text-earth-400 transition-colors font-medium">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20" class="mr-3">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
						</svg>
						<span>Overview</span>
					</a>
					</li>
					<li>
						<div class="relative">
							<button x-on:click="dropdownOpen = !dropdownOpen" class="w-full flex items-center justify-between px-3 py-2 text-earth-300 rounded-md hover:bg-earth-50 hover:text-earth-400 transition-colors font-medium">
							<div class="flex items-center">
								<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20" class="mr-3">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
								</svg>
								<span>Organizations</span>
							</div>
							<svg class="w-4 h-4 transition-transform duration-200" :class="dropdownOpen ? 'rotate-180' : ''" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
							</svg>
							</button>

							<div x-cloak x-show="dropdownOpen" x-transition class="absolute z-10 w-full mt-1 bg-white border border-earth-100 rounded-md shadow-md overflow-hidden">
							{organizations.map((org: { id: string; name: string }) => (
								<button
								type="button"
								class="w-full flex items-center px-3 py-2 text-earth-300 hover:bg-earth-100 transition-colors"
								:class={` isActiveOrg('${org.id}') ? 'bg-earth-50' : ''`}
								x-on:click={`handleOrgSwitch(${JSON.stringify(org)})`}
								>
								<div class="w-6 h-6 flex items-center justify-center bg-earth-100 text-earth-200 rounded-full mr-2 text-sm font-semibold">
									{org.name[0]}
								</div>
								<span class="truncate">{org.name}</span>
								</button>
							))}
							<div class="h-px bg-earth-100 my-1"></div>
							<SheetForm form="orgs">
								<button slot="sheet-form-trigger" @click.prevent="async () => window.history.pushState({}, '', '/dashboard/orgs/new')" class="flex w-full items-center px-3 py-2 text-earth-200 hover:bg-earth-50 transition-colors">
									<div class="w-6 h-6 flex items-center justify-center bg-earth-100 text-earth-200 rounded-full mr-2 text-sm font-semibold">
									+
									</div>
									<span>Create Organization</span>
								</button>
								<OrgsForm />
							</SheetForm>

							</div>
						</div>
					</li>

					<li>
						<SheetForm form="project">
							<button slot="sheet-form-trigger" @click.prevent="async () => window.history.pushState({}, '', '/dashboard/project/new')" class="flex w-full items-center px-3 py-2 text-earth-300 hover:bg-earth-50 transition-colors">
								<div class="w-6 h-6 flex items-center justify-center bg-earth-100 text-earth-300 rounded-full mr-2 text-sm font-semibold">
								+
								</div>
								<span>Create Project</span>
							</button>
							<ProjectForm />
						</SheetForm>
					</li>
				</ul>
		    </div>

		    <div class="mb-6">
				<h4 class="text-xs uppercase tracking-wide text-earth-200 mb-2 px-2">Settings</h4>
				<ul class="space-y-1">
					<li>
					<a href="/dashboard/profile" class="flex items-center px-3 py-2 text-earth-300 rounded-md hover:bg-earth-50 hover:text-earth-400 transition-colors font-medium">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20" class="mr-3">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
						</svg>
						<span>Profile</span>
					</a>
					</li>
					<li>
					<a href="/dashboard/settings" class="flex items-center px-3 py-2 text-earth-300 rounded-md hover:bg-earth-50 hover:text-earth-400 transition-colors font-medium">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20" class="mr-3">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
						</svg>
						<span>Settings</span>
					</a>
					</li>
					<li>
					<a href="/api/auth/github/install" class="flex items-center px-3 py-2 text-earth-300 rounded-md hover:bg-earth-50 hover:text-earth-400 transition-colors font-medium">
						<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" width="20" height="20" class="mr-3">
						<path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
						</svg>
						<span>Connect to GitHub</span>
					</a>
					</li>
				</ul>
		    </div>
		</nav>

		<div class="p-4 border-t border-earth-100">
		    <a href="https://docs.github.com/en/rest" target="_blank" class="flex items-center px-3 py-2 bg-earth-50 rounded-md text-earth-300 hover:bg-earth-100 transition-colors">
		    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20" class="mr-2">
		        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
		    </svg>
		    <span>GitHub API Docs</span>
		    </a>
		</div>
	</aside>
</div>
