---
import "../styles/global.css";
import { actions } from "astro:actions";
import Header from "@/components/dashboard/Header.astro";
import Sidebar from "../components/dashboard/Sidebar.astro";
import { $orgState, currentOrgIdState } from "../store/navStore";
import Newlayout from "./Newlayout.astro";

interface Props {
	title?: string;
	userOrgs?: any[];
	currentOrg?: any;
}

const {
	title,
	userOrgs: propUserOrgs,
	currentOrg: propCurrentOrg,
} = Astro.props;

const currentUser = Astro.locals.currentUser;
const userId = currentUser?.id;

if (!userId) {
	return Astro.redirect("/login");
}

let userOrgs = propUserOrgs;
let currentOrg = propCurrentOrg;

if (!userOrgs) {
	const { data, error } = await Astro.callAction(
		actions.orgsActions.getOrgs,
		{},
	);
	if (!error && data) {
		userOrgs = data;
		if (userOrgs && Array.isArray(userOrgs)) {
			$orgState.set([...userOrgs]);
		}
	}
}

