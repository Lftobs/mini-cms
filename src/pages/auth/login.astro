---
import Newlayout from "../../layouts/Newlayout.astro";

const redirectParam = Astro.url.searchParams.get("next") || "/dashboard";
const googleLoginUrl = `/api/auth/google/login?next=${encodeURIComponent(redirectParam)}`;
---

<Newlayout title="Sign in - mini-cms">
	<div class="fixed inset-0 gradient-mesh pointer-events-none z-0"></div>
	<div
		class="w-full min-h-screen relative overflow-x-hidden flex flex-col justify-center items-center"
	>
		<div
			class="relative z-10 w-full max-w-[1060px] px-4 sm:px-6 md:px-8 lg:px-0 flex flex-col justify-center items-center"
		>
			<!-- Left vertical line -->
			<div
				class="w-[1px] h-full absolute left-4 sm:left-6 md:left-8 lg:left-0 top-0 bg-[rgba(55,50,47,0.12)] shadow-[1px_0px_0px_white] z-0 hidden lg:block"
			>
			</div>

			<!-- Right vertical line -->
			<div
				class="w-[1px] h-full absolute right-4 sm:right-6 md:right-8 lg:right-0 top-0 bg-[rgba(55,50,47,0.12)] shadow-[1px_0px_0px_white] z-0 hidden lg:block"
			>
			</div>

			<!-- Main content container -->
			<div
				class="w-full max-w-[500px] flex flex-col justify-center items-center gap-8 py-16 md:py-24 relative z-10"
			>
				<!-- Logo/Brand -->
				<div class="flex flex-col justify-center items-center gap-4">
					<a href="/" class="flex items-center justify-center group">
						<div
							class="text-center text-[#49423D] text-2xl md:text-3xl font-semibold leading-4 font-sans transition-colors group-hover:text-[#37322F]"
						>
							mini-cms
						</div>
					</a>
					<div
						class="text-center text-[rgba(73,66,61,0.70)] text-sm font-normal leading-5 font-sans"
					>
						Minimal CMS for GitHub
					</div>
				</div>

				<!-- Login Card -->
				<div
					class="w-full bg-white shadow-[0px_0px_0px_0.9056603908538818px_rgba(0,0,0,0.08)] overflow-hidden rounded-lg flex flex-col justify-start items-start p-8 md:p-10"
				>
					<!-- Header -->
					<div
						class="self-stretch flex flex-col justify-start items-start gap-2 mb-6"
					>
						<div
							class="self-stretch text-center flex justify-center flex-col text-[#49423D] text-2xl md:text-3xl font-semibold leading-tight md:leading-[36px] font-sans tracking-tight"
						>
							Sign in to your account
						</div>
						<div
							class="self-stretch text-center text-[#605A57] text-sm md:text-base font-normal leading-6 md:leading-7 font-sans"
						>
							Sign in with Google to manage your content
							repositories
						</div>
					</div>

					<!-- Google Login Button -->
					<a
						href={googleLoginUrl}
						class="w-full relative bg-white border border-[#E6E4E1] shadow-sm overflow-hidden rounded-full flex justify-center items-center px-6 py-3 cursor-pointer hover:bg-[#F7F5F3] transition-all duration-300 group"
					>
						<div
							class="flex justify-center items-center gap-3 relative z-10"
						>
							<svg
								class="w-5 h-5"
								viewBox="0 0 24 24"
								aria-hidden="true"
							>
								<path
									d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
									fill="#4285F4"></path>
								<path
									d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
									fill="#34A853"></path>
								<path
									d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
									fill="#FBBC05"></path>
								<path
									d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
									fill="#EA4335"></path>
							</svg>
							<div
								class="flex flex-col justify-center text-[#49423D] text-sm md:text-[15px] font-medium leading-5 font-sans"
							>
								Continue with Google
							</div>
						</div>
					</a>

					<!-- Additional info -->
					<div
						class="self-stretch mt-6 pt-6 border-t border-[rgba(55,50,47,0.12)]"
					>
						<div
							class="text-center text-[#605A57] text-xs md:text-sm font-normal leading-5 font-sans"
						>
							By signing in, you agree to connect your GitHub
							account.
							<br class="hidden sm:block" />
							Your repositories remain private and secure.
						</div>
					</div>
				</div>

				<!-- Footer link -->
				<div class="text-center">
					<a
						href="/"
						class="text-[#605A57] text-sm font-normal leading-5 font-sans hover:text-[#49423D] transition-colors"
					>
						‚Üê Back to home
					</a>
				</div>
			</div>
		</div>
	</div>
</Newlayout>
